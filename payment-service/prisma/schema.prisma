generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id        Int      @id @default(autoincrement())
  orderId   Int      @unique
  amount    Int
  status    String
  state     Int      @default(0)   // <--- Shu borligini tekshiring
  paymeId   String?  @unique       // <--- Shu borligini tekshiring
  paymeTime BigInt?                // <--- Shu borligini tekshiring
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}